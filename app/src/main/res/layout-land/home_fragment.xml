<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6cfcf">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerVideosHome"
            android:layout_width="609dp"
            android:layout_height="197dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="26dp"
            android:background="#e6cfcf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeTxt" />

        <TextView
            android:id="@+id/homeTxt"
            android:layout_width="301dp"
            android:layout_height="47dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="8dp"
            android:text="@string/top_trending_videos"
            android:textSize="32dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerVideosHome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homePictureVid" />

        <ImageView
            android:id="@+id/homePictureVid"
            android:layout_width="67dp"
            android:layout_height="57dp"
            android:layout_marginStart="172dp"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_ondemand_video_24"
            app:layout_constraintBottom_toTopOf="@+id/homeTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>